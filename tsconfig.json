{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@api/*":["./src/api/*"],
      "@business/*": ["./src/business/*"],
      "@components/*": ["./src/components/*"],
      "@core-tools/*": ["./src/core-tools/*"],
      "@page/*": ["./src/pages/*"],
      "@routes/*": ["./src/routes/*"],
      "@local-types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src",
    "./src/types",
    "./config"],
  "compileOnSave": false
}
